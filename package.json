{
  "private": true,
  "name": "davids-site",
  "description": "",
  "license": "",
  "dependencies": {
    "@remix-run/cloudflare-pages": "^1.2.3",
    "@remix-run/react": "^1.2.3",
    "classnames": "^2.3.1",
    "jotai": "^1.6.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.2.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.4.0",
    "@remix-run/dev": "^1.2.3",
    "@remix-run/node": "^1.3.2",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.4",
    "@testing-library/user-event": "^13.5.0",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@vitejs/plugin-react": "^1.2.0",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "happy-dom": "^2.50.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.1.2",
    "vite-tsconfig-paths": "^3.4.1",
    "vitest": "^0.7.7",
    "wrangler": "beta"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "scripts": {
    "postinstall": "remix setup cloudflare-pages",
    "build": "run-s build:tailwind build:remix",
    "build:remix": "cross-env NODE_ENV=production remix build",
    "build:tailwind": "tailwindcss --output ./app/tailwind.css --minify",
    "clean": "rm -rf build && rm -rf public/build && rm app/tailwind.css",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:wrangler": "cross-env NODE_ENV=development wrangler pages dev ./public --kv SECRET_MESSAGES",
    "dev:tailwind": "tailwindcss -o ./app/tailwind.css --watch",
    "dev": "npm run build:tailwind && cross-env NODE_ENV=development remix build && run-p dev:*",
    "start": "npm run dev",
    "test": "vitest",
    "test:watch": "npm test",
    "test:run": "npm test --run"
  },
  "main": "build/index.js"
}
