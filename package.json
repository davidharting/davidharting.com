{
  "private": true,
  "name": "davids-site",
  "description": "",
  "license": "",
  "dependencies": {
    "@remix-run/cloudflare-workers": "^1.2.1",
    "@remix-run/react": "^1.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.2.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^2.2.2",
    "@cloudflare/wrangler": "^1.19.8",
    "@remix-run/dev": "^1.2.1",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "miniflare": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "scripts": {
    "postinstall": "remix setup cloudflare-workers",
    "build": "run-s clean build:tailwind build:remix",
    "build:remix": "cross-env NODE_ENV=production remix build",
    "build:tailwind": "tailwindcss --output ./app/tailwind.css --minify",
    "clean": "rm -rf build && rm -rf public/build && rm app/tailwind.css",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:miniflare": "cross-env NODE_ENV=development miniflare ./build/index.js --watch",
    "dev:tailwind": "tailwindcss -o ./app/tailwind.css --watch",
    "dev": "cross-env NODE_ENV=development remix build && run-p dev:*",
    "start": "npm run dev",
    "deploy": "npm run build && wrangler publish"
  },
  "main": "build/index.js"
}
