{
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "format": "prettier --write . && prettier --write **/*.blade.php",
        "format:check": "prettier --check . && prettier --check **/*.blade.php"
    },
    "devDependencies": {
        "@shufo/prettier-plugin-blade": "^1.13.4",
        "autoprefixer": "^10.4.2",
        "daisyui": "^4.4.18",
        "laravel-vite-plugin": "^0.8.0",
        "postcss": "^8.4.6",
        "prettier": "^3.0.3",
        "tailwindcss": "^3.4.0",
        "vite": "^4.0.0"
    },
    "prettier": {
        "plugins": [
            "@shufo/prettier-plugin-blade"
        ],
        "overrides": [
            {
                "files": [
                    "**/*.blade.php"
                ],
                "options": {
                    "parser": "blade",
                    "tabWidth": 4
                }
            }
        ]
    }
}
